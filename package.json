{
  "name": "block.io-game",
  "version": "0.0.0",
  "description": "Multiplayer game",
  "main": "dist/app.js",
  "repository": "git@github.com:FFKL/block.io-game.git",
  "author": "dmitrii <ffklffkl@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node ./dist/server/app.js",
    "build": "npm-run-all clean shared:build server:build public:build",
    "clean": "rimraf dist",
    "public:watch": "webpack-dev-server",
    "public:build": "webpack",
    "server:watch": "nodemon",
    "server:build": "babel ./server --out-dir ./dist/server",
    "shared:build": "babel ./shared --out-dir ./dist/shared",
    "server:clean": "rimraf dist/server"
  },
  "dependencies": {
    "bootstrap": "^4.4.1",
    "cat-names": "^3.0.0",
    "colors": "^1.4.0",
    "events": "^3.1.0",
    "express": "^4.17.1",
    "jquery": "^3.5.0",
    "popper.js": "^1.16.1",
    "randomcolor": "^0.5.4",
    "react": "^16.13.1",
    "react-bootstrap": "^1.0.1",
    "react-dom": "^16.13.1",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "uid": "^1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "autoprefixer": "^9.7.6",
    "babel-loader": "^8.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.5.2",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.2.0",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^3.0.0",
    "rimraf": "^3.0.2",
    "style-loader": "^1.1.4",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "nodemonConfig": {
    "exec": "npm-run-all server:clean server:build",
    "watch": [
      "server/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  }
}
